{% extends 'base.html.twig' %}

{% block title %}Gérer les campus {% endblock %}

{% block body %}


    <h1>Gérer les campus</h1>

    <br>

    <h2>Filtrer les campus</h2>

    <br>

    <div class="container-admin">
        <div class="">
            {{ form_start(filterCampuses) }}
            {{ form_errors(filterCampuses) }}
            {{ form_row(filterCampuses.name) }}
        </div>
        <div class="filter-admin">
            <button class="login-button green">Rechercher</button>
        </div>
        {{ form_end(filterCampuses) }}
    </div>

    <br>

<div class="tableau-admin">
    <table>
        <thead>
        <tr>
            <th>Campus</th>
            <th>Actions</th>
        </tr>
        </thead>

<tbody>

{% for campus in campuses %}
<tr>
<td>{{ campus.name }}</td>
<td><a href="">Modifier</a> - <a href="">Supprimer</a></td>
</tr>
{% endfor %}


<tr>
    <td>
{#            <input type="text" placeholder="Paris">#}
        {{form_start (campusForm)}}
        {{form_widget (campusForm)}}
        {{form_errors (campusForm)}}
        {{form_rest (campusForm)}}
    </td>
    <td><button type="submit">Ajouter</button></td>
    {{ form_end (campusForm) }}
{#    <td><a href="{{ path('dashboard_campusAdd')}}">Ajouter</a></td></form>#}
</tr>

</tbody>


      </table>
</div>
{% endblock %}
