{% extends 'base.html.twig' %}

{% block title %}Gérer les villes{% endblock %}

{% block body %}

    <h1>Gérer les villes</h1>

    <br>

    <h2>Filtrer les villes</h2>

    <br>

    <div class="container-admin">
        <div class="">
            {{ form_start(filterCities) }}
            {{ form_errors(filterCities) }}
            {{ form_row(filterCities.name) }}
        </div>
        <div class="filter-admin">
            <button class="login-button green">Rechercher</button>
        </div>
        {{ form_end(filterCities) }}
    </div>

    <br>

    <div class="tableau-admin">
        <table>
            <thead>
            <tr>
                <th>Villes</th>
                <th>Code Postal</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>

            {% for city in cities %}
            <tr>
                <td>{{ city.name }}</td>
                <td>{{ city.zipCode }}</td>
                <td>
                    <a href="">Modifier</a>
                     -
                    <a href=""> Supprimer</a>
                </td>
            </tr>
            {% endfor %}

            <tr>
                <td>
                    {{ form_start(cityForm) }}
                    {{ form_widget(cityForm.name) }}
                    {{ form_errors(cityForm.name) }}
                    {{ form_rest(cityForm.name) }}
                </td>
                <td>
                    {{ form_widget(cityForm.zipCode) }}
                    {{ form_errors(cityForm.zipCode) }}
                    {{ form_rest(cityForm.zipCode) }}
                </td>
                <td><button type="submit">Ajouter</button></td>
                {{ form_end(cityForm) }}
            </tr>
            </tbody>
        </table>
    </div>

{% endblock %}
