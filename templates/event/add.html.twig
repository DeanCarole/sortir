{% extends 'base.html.twig' %}


{% block title %}Créer une sortie{% endblock %}



{% block body %}

    <div class="profil">
    <h1>Créer une sortie</h1>

    {{ form_start(eventForm) }}

    {{ form_row(eventForm.name) }}
    {{ form_row(eventForm.startDateTime) }}
    {{ form_row(eventForm.registrationDeadline) }}
    {{ form_row(eventForm.nbRegistrationMax) }}
    {{ form_row(eventForm.duration) }}
    {{ form_row(eventForm.eventData) }}
    {{ form_row(eventForm.campus) }}
    {{ form_row(eventForm.place) }}

    <button class="login-button green">Enregistrer</button>
    {{ form_end(eventForm) }}

    <a href="{{ path('place_add') }}"><button type="button" class="login-button green" id="plusbutton">+</button></a>
    <a href="{{ path('main_home') }}"><button type="button" class="login-button">Annuler</button></a>



    </div>


{% endblock %}
