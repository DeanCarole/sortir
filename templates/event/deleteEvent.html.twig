{% extends 'base.html.twig' %}


{% block body %}


    <h1>Annuler une sortie</h1>
    <div class="container">
        {{ form_start(eventForm) }}

        {{ form_row(eventForm.name) }}
        {{ form_row(eventForm.startDateTime) }}
        {{ form_row(eventForm.registrationDeadline) }}
        {{ form_row(eventForm.nbRegistrationMax) }}
        {{ form_row(eventForm.duration) }}
        {{ form_row(eventForm.eventData) }}
        {{ form_row(eventForm.campus) }}
        {{ form_row(eventForm.place) }}

        <label for="street">Rue : </label>
        <input type="text" name="street">
        <label for="zipCode">Code postal : </label>
        <input type="text" name="zipCode">
        <label for="latitude">Latitude : </label>
        <input type="text" name="latitude">
        <label for="longitude">Longitude : </label>
        <input type="text" name="longitude">

        <a href="{{ path('main_home') }}"><button type="submit" class="login-button">Annuler</button></a>
        {{ form_end(eventForm) }}





    </div>

{% endblock %}

{% block title %}
    Annuler une sortie
{% endblock %}