{% extends 'base.html.twig' %}

{% block body %}
    <div class="profil">

        {# TODO : affichage si photo #}
        {% if user.picture is null %}
            <img class="imgUser" src="{{ asset('img/users/profil.png') }}" alt="user picture default">
        {% else %}
            <img class="imgUser" src="{{ asset('img/users/') ~ user.picture }}" alt="user picture">
        {% endif %}


        <h2>{{ event.planner.username }}</h2>
        <div> Nom : {{ event.planner.name }} </div>
        <div> Prénom : {{ event.planner.firstName }} </div>
        <div> Téléphone : {{ event.planner.phone }} </div>
        <div> Email : {{ event.planner.email }} </div>
        <div> Campus : {{ event.campus.name }} </div>
        <a href="{{ path('main_home') }}">
            <button type="button" class="login-button">Retour</button>
        </a>


    </div>


{% endblock %}

